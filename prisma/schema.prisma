generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id            String       @id @default(cuid())
  slug          String       @unique
  title         String
  description   String?
  bodyMarkdown  String
  tags          String[]     @default([])
  thumbnailUrl  String?
  published     Boolean      @default(false)
  publishedAt   DateTime?
  views         Int          @default(0)   // <--- moved here
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  comments      BlogComment[]
  viewsLog      BlogView[]
}

model BlogComment {
  id        String   @id @default(cuid())

  postSlug  String
  post      BlogPost @relation(fields: [postSlug], references: [slug], onDelete: Cascade)

  name       String?
  email      String
  showEmail  Boolean  @default(false)
  content    String
  approved   Boolean  @default(true)
  ipHash     String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([postSlug, createdAt])
}

model BlogView {
  id        String   @id @default(cuid())

  postSlug  String
  post      BlogPost @relation(fields: [postSlug], references: [slug], onDelete: Cascade)

  ip        String?
  ipHash    String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([postSlug, createdAt])
  @@index([postSlug, ipHash, createdAt])
}
